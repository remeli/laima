<%= form_for(@job, :html => {:multipart => true}) do |f| %>
  <%= errors_for_object(@job) %>
  <div class="field">
    <%= f.label :title, "Название:" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :image, "Фотография:" %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :description, "Описание:" %>
    <%= f.text_area :description %>
  </div>
  <div class="submit">
    <%= f.submit "Отправить" %>
  </div>
<% end %>