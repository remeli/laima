<%= form_for([:admin,@job], :html => {:multipart => true}) do |f| %>
  <%= errors_for_object(@job) %>
  <div class="field">
    <%= f.label :title, "Название:" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :service_id, "Услуга" %>
    <%= collection_select(:job, :service_id, Service.asctitle, :id, :title)%>
  </div>
  <div class="field" />
  <div class="field">
    <%= f.label :description, "Описание:" %>
    <%= f.text_area :description %>
  </div>
  <div class="submit">
    <%= f.submit "Отправить" %>
  </div>
<% end %>